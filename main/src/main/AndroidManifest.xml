<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vidarottosson.deviceexplorer"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="15" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher">

        <uses-library
                android:name="com.google.android.glass"
                android:required="true" />

        <activity
                android:name=".MenuActivity"
                android:theme="@style/MenuTheme">
        </activity>

        <activity
                android:name="com.vidarottosson.deviceexplorer.pics.PictureExplorerActivity"
                android:label="@string/app_name"
                android:enabled="true" >
        </activity>

        <service
                android:name="com.vidarottosson.deviceexplorer.DeviceExplorerService"
                android:label="@string/app_name"
                android:icon="@drawable/ic_app_icon"
                android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            <meta-data
                    android:name="com.google.android.glass.VoiceTrigger"
                    android:resource="@xml/explorer_show" />
        </service>

    </application>

</manifest>
