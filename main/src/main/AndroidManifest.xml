<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="is.vidarottosson.glass.gallery"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@drawable/ic_photo">

        <uses-library
                android:name="com.google.android.glass"
                android:required="true"/>

        <activity
                android:name="is.vidarottosson.glass.gallery.MenuActivity"
                android:theme="@style/MenuTheme">

            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER"/>
            </intent-filter>
            <meta-data
                    android:name="com.google.android.glass.VoiceTrigger"
                    android:resource="@xml/gallery_trigger"/>

        </activity>

        <activity
                android:name=".pics.PictureActivity"
                android:label="@string/app_name"
                android:enabled="true">
        </activity>

        <activity
                android:name=".video.VideoActivity"
                android:label="@string/app_name"
                android:enabled="true">
        </activity>

        <activity
                android:name=".video.VideoListActivity"
                android:label="@string/app_name"
                android:enabled="true">
        </activity>

        <activity
                android:name=".OptionsMenuActivity"
                android:label="@string/app_name"
                android:enabled="true">
        </activity>

        <activity
                android:name=".DetailsActivity"
                android:label="@string/app_name"
                android:enabled="true">
        </activity>

        <activity
                android:name=".DeleteActivity"
                android:label="@string/app_name"
                android:enabled="true">
        </activity>

        <activity
                android:name=".ShareMenuActivity"
                android:label="@string/app_name"
                android:enabled="true">
        </activity>

    </application>

</manifest>
